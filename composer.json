{
    "name": "mcxv/laravel-payment-adapter",
    "description": "Laravel payment adapter for various payment gateways",
    "license": "Apache 2.0",
    "authors": [
        {
            "name": "Duog Lee",
            "email": "duoglee@0x1115.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "laravel/framework": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "mcxv\\LaravelPaymentAdapter\\LaravelPaymentAdapterServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "mcxv\\LaravelPaymentAdapter\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}